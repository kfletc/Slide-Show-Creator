<Window x:Class="SlideShowCreator.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideShowCreator"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="StartWindow" Height="400" Width="500">
    <Grid>
        <Button Content="Create New" HorizontalAlignment="Left" Margin="179,120,0,0" VerticalAlignment="Top" Height="34" Width="128" Click="CreateNewButtonClick" Background="#FF9E9999" Foreground="#FF100F0F" FontWeight="Bold"/>
        <Button Content="View Existing" Margin="179,192,0,0" VerticalAlignment="Top" Height="34" Width="128" Background="#FF999999" Foreground="Black" FontWeight="Bold" Click="ViewExistingButtonClick"/>

    </Grid>
</Window>
